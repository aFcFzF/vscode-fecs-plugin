{
    "eslint": {
        "parser": "babel-eslint",
        "parserOptions": {
            "sourceType": "module",
            "ecmaFeatures": {
                "jsx": true
            }
        },
        "plugins": ["babel", "react", "import"],
        "env": {
            "browser": true,
            "node": true
        },
        "extends": "eslint:recommended",
        "rules": {
            "fecs-no-require": "off",
            "accessor-pairs": 2,
            "array-bracket-newline": [1, "consistent"],
            "array-bracket-spacing": [2, "never"],
            "array-callback-return": 2,
            "array-element-newline": "off",
            "arrow-body-style": "off",
            "arrow-parens": [2, "as-needed"],
            "arrow-spacing": 2,
            "block-scoped-var": 1,
            "block-spacing": [2, "never"],
            "brace-style": "off",
            "callback-return": ["off", ["callback", "cb", "next", "done"]],
            "camelcase": 2,
            "capitalized-comments": "off",
            "class-methods-use-this": "off",
            "comma-dangle": 2,
            "comma-spacing": [2, { "before": false, "after": true }],
            "comma-style": [2, "last"],
            "complexity": [1, 10],
            "computed-property-spacing": [2, "never"],
            "consistent-return": [2, { "treatUndefinedAsUnspecified": true }],
            "consistent-this": "off",
            "constructor-super": 2,
            "curly": [2, "all"],
            "default-case": "off",
            "dot-location": [2, "property"],
            "dot-notation": [2, { "allowKeywords": true }],
            "eol-last": [2, "always"],
            "eqeqeq": [2, "always", { "null": "ignore" }],
            "for-direction": "off",
            "func-call-spacing": [2, "never"],
            "func-name-matching": "off",
            "func-style": "off",
            "function-paren-newline": "off",
            "generator-star-spacing": [2, { "before": false, "after": true }],
            "global-require": 1,
            "guard-for-in": 1,
            "handle-callback-err": 1,
            "id-blacklist": "off",
            "id-length": "off",
            "id-match": "off",
            "implicit-arrow-linebreak": 2,
            "indent": [2, 4, { "SwitchCase": 1 }],
            "indent-legacy": "off",
            "init-declarations": 1,
            "jsx-quotes": [2, "prefer-double"],
            "key-spacing": [2, { "beforeColon": false, "afterColon": true }],
            "keyword-spacing": 2,
            "line-comment-position": "off",
            "linebreak-style": [2, "unix"],
            "lines-around-comment": "off",
            "lines-between-class-members": [2, "always"],
            "max-depth": [1, 3],
            "max-len": [2, { "code": 120, "tabWidth": 4, "ignoreUrls": true, "ignoreRegExpLiterals": true }],
            "max-lines": [1, 800],
            "max-nested-callbacks": [1, 3],
            "max-params": "off",
            "max-statements": [1, 30, { "ignoreTopLevelFunctions": true }],
            "max-statements-per-line": 2,
            "multiline-comment-style": "off",
            "multiline-ternary": "off",
            "new-cap": 2,
            "new-parens": 1,
            "newline-per-chained-call": [1, { "ignoreChainWithDepth": 2 }],
            "no-alert": 1,
            "no-array-constructor": 1,
            "no-await-in-loop": "off",
            "no-bitwise": "off",
            "no-buffer-constructor": 1,
            "no-caller": 2,
            "no-case-declarations": 2,
            "no-catch-shadow": 1,
            "no-class-assign": 2,
            "no-compare-neg-zero": 2,
            "no-cond-assign": 2,
            "no-confusing-arrow": [2, { "allowParens": true }],
            "no-console": 2,
            "no-const-assign": 2,
            "no-constant-condition": 2,
            "no-continue": "off",
            "no-control-regex": 2,
            "no-debugger": 2,
            "no-delete-var": 2,
            "no-div-regex": "off",
            "no-dupe-args": 2,
            "no-dupe-class-members": 2,
            "no-dupe-keys": 2,
            "no-duplicate-case": 2,
            "no-duplicate-imports": 1,
            "no-else-return": "off",
            "no-empty": 2,
            "no-empty-character-class": 2,
            "no-empty-function": 2,
            "no-empty-pattern": 2,
            "no-eq-null": "off",
            "no-eval": 2,
            "no-ex-assign": 2,
            "no-extend-native": 2,
            "no-extra-bind": 1,
            "no-extra-boolean-cast": 2,
            "no-extra-label": 2,
            "no-extra-parens": [2, "functions"],
            "no-extra-semi": 2,
            "no-fallthrough": 2,
            "no-floating-decimal": 2,
            "no-func-assign": 1,
            "no-global-assign": 2,
            "no-implicit-coercion": "off",
            "no-implicit-globals": "off",
            "no-implied-eval": 2,
            "no-inline-comments": "off",
            "no-inner-declarations": 2,
            "no-invalid-regexp": 2,
            "no-invalid-this": "off",
            "no-irregular-whitespace": 2,
            "no-iterator": "off",
            "no-label-var": 1,
            "no-labels": "off",
            "no-lone-blocks": "off",
            "no-lonely-if": 2,
            "no-loop-func": 1,
            "no-magic-numbers": "off",
            "no-mixed-operators": 1,
            "no-mixed-requires": "off",
            "no-mixed-spaces-and-tabs": 2,
            "no-multi-assign": 1,
            "no-multi-spaces": [2, { "exceptions": { "Property": false } }],
            "no-multi-str": 1,
            "no-multiple-empty-lines": 1,
            "no-negated-condition": 1,
            "no-negated-in-lhs": 2,
            "no-nested-ternary": "off",
            "no-new": 2,
            "no-new-func": 2,
            "no-new-object": 2,
            "no-new-require": 2,
            "no-new-symbol": 2,
            "no-new-wrappers": 2,
            "no-obj-calls": 2,
            "no-octal": 2,
            "no-octal-escape": 2,
            "no-param-reassign": [1, { "props": true }],
            "no-path-concat": 2,
            "no-plusplus": "off",
            "no-process-env": "off",
            "no-process-exit": 1,
            "no-proto": 2,
            "no-prototype-builtins": "off",
            "no-redeclare": 2,
            "no-regex-spaces": 2,
            "no-restricted-globals": "off",
            "no-restricted-imports": "off",
            "no-restricted-modules": "off",
            "no-restricted-properties": "off",
            "no-restricted-syntax": "off",
            "no-return-assign": [2, "except-parens"],
            "no-return-await": 2,
            "no-script-url": 1,
            "no-self-assign": 2,
            "no-self-compare": 2,
            "no-sequences": 2,
            "no-shadow": "off",
            "no-shadow-restricted-names": 1,
            "no-spaced-func": 2,
            "no-sparse-arrays": 2,
            "no-sync": 1,
            "no-tabs": 1,
            "no-template-curly-in-string": "off",
            "no-ternary": "off",
            "no-this-before-super": 2,
            "no-throw-literal": 1,
            "no-trailing-spaces": 2,
            "no-undef": 2,
            "no-undef-init": 1,
            "no-undefined": "off",
            "no-underscore-dangle": 1,
            "no-unexpected-multiline": 2,
            "no-unmodified-loop-condition": 1,
            "no-unneeded-ternary": 2,
            "no-unreachable": 2,
            "no-unsafe-finally": 2,
            "no-unsafe-negation": 2,
            "no-unused-expressions": [1, { "allowShortCircuit": true }],
            "no-unused-labels": 2,
            "no-unused-vars": 2,
            "no-use-before-define": 2,
            "no-useless-call": 1,
            "no-useless-computed-key": 2,
            "no-useless-concat": 1,
            "no-useless-constructor": 2,
            "no-useless-escape": 2,
            "no-useless-rename": 2,
            "no-useless-return": 2,
            "no-var": 2,
            "no-void": 2,
            "no-warning-comments": "off",
            "no-whitespace-before-property": 2,
            "no-with": 2,
            "nonblock-statement-body-position": "off",
            "object-curly-newline": [2, { "consistent": true, "multiline": true }],
            "object-curly-spacing": 1,
            "object-property-newline": "off",
            "object-shorthand": ["off", "consistent-as-needed"],
            "one-var": [2, "never"],
            "one-var-declaration-per-line": 2,
            "operator-assignment": "off",
            "operator-linebreak": [2, "before"],
            "padded-blocks": "off",
            "padding-line-between-statements": "off",
            "prefer-arrow-callback": 1,
            "prefer-const": "off",
            "prefer-destructuring": "off",
            "prefer-numeric-literals": 2,
            "prefer-promise-reject-errors": 1,
            "prefer-reflect": "off",
            "prefer-rest-params": 2,
            "prefer-spread": 1,
            "prefer-template": "off",
            "quote-props": "off",
            "quotes": [2, "single"],
            "radix": 2,
            "require-await": 1,
            "require-jsdoc": "off",
            "require-yield": 2,
            "rest-spread-spacing": [2, "never"],
            "semi": [2, "always"],
            "semi-spacing": 2,
            "semi-style": [2, "last"],
            "sort-imports": "off",
            "sort-keys": "off",
            "sort-vars": "off",
            "space-before-blocks": [2, "always"],
            "space-before-function-paren": [2, { "anonymous": "always", "named": "never" }],
            "space-in-parens": [2, "never"],
            "space-infix-ops": 2,
            "space-unary-ops": 1,
            "spaced-comment": [2, "always"],
            "strict": "off",
            "switch-colon-spacing": [2, { "before": false, "after": true }],
            "symbol-description": 1,
            "template-curly-spacing": [2, "never"],
            "template-tag-spacing": [2, "never"],
            "unicode-bom": 1,
            "use-isnan": 2,
            "valid-jsdoc": "off",
            "valid-typeof": 2,
            "vars-on-top": "off",
            "wrap-iife": [2, "any"],
            "wrap-regex": "off",
            "yield-star-spacing": "off",
            "yoda": 1,

            "babel/object-curly-spacing": [2, "never"],

            "import/no-unresolved": 2,
            "import/named": 2,
            "import/default": 2,
            "import/namespace": "off",
            "import/no-restricted-paths": "off",
            "import/no-absolute-path": 2,
            "import/no-dynamic-require": 1,
            "import/no-internal-modules": "off",
            "import/no-webpack-loader-syntax": 1,
            "import/export": 2,
            "import/no-named-as-default": 1,
            "import/no-named-as-default-member": 2,
            "import/no-deprecated": 2,
            "import/no-extraneous-dependencies": [
                "error",
                { "devDependencies": true, "optionalDependencies": true, "peerDependencies": true }
            ],
            "import/no-mutable-exports": 2,
            "import/unambiguous": 1,
            "import/no-commonjs": 2,
            "import/no-amd": 2,
            "import/no-nodejs-modules": 2,
            "import/first": 2,
            "import/no-duplicates": 2,
            "import/no-namespace": "off",
            "import/extensions": [2, "always", { "js": "never", "jsx": "never", "es": "never", "mjs": "never" }],
            "import/order": [2, { "groups": ["builtin", "external", "internal", "parent", "sibling", "index"] }],
            "import/newline-after-import": 2,
            "import/prefer-default-export": "off",
            "import/max-dependencies": "off",
            "import/no-unassigned-import": "off",
            "import/no-named-default": 2,

            "react/default-props-match-prop-types": 2,
            "react/display-name": "off",
            "react/forbid-component-props": "off",
            "react/forbid-elements": "off",
            "react/forbid-foreign-prop-types": 1,
            "react/forbid-prop-types": "off",
            "react/jsx-boolean-value": 2,
            "react/jsx-closing-bracket-location": 2,
            "react/jsx-curly-spacing": 2,
            "react/jsx-equals-spacing": 2,
            "react/jsx-filename-extension": [2, { "extensions": [".js", ".jsx", ".es"] }],
            "react/jsx-first-prop-new-line": 2,
            "react/jsx-handler-names": "off",
            "react/jsx-indent-props": [2, 4],
            "react/jsx-indent": [2, 4],
            "react/jsx-key": 2,
            "react/jsx-max-props-per-line": [2, { "when": "multiline", "maximum": 1 }],
            "react/jsx-no-bind": [1, { "ignoreRefs": true }],
            "react/jsx-no-comment-textnodes": 1,
            "react/jsx-no-duplicate-props": 2,
            "react/jsx-no-literals": "off",
            "react/jsx-no-target-blank": 2,
            "react/jsx-no-undef": 2,
            "react/jsx-pascal-case": 2,
            "react/jsx-sort-props": "off",
            "react/jsx-tag-spacing": 2,
            "react/jsx-uses-react": "off",
            "react/jsx-uses-vars": 2,
            "react/jsx-wrap-multilines": 2,
            "react/no-array-index-key": 2,
            "react/no-children-prop": 2,
            "react/no-danger-with-children": 2,
            "react/no-danger": 1,
            "react/no-deprecated": 2,
            // TODO: 当前下面2个规则会在异步函数里都报错，等官方解决后再打开
            //
            // https://github.com/yannickcr/eslint-plugin-react/issues/1110
            "react/no-did-mount-set-state": "off",
            "react/no-did-update-set-state": "off",
            "react/no-direct-mutation-state": 2,
            "react/no-find-dom-node": 2,
            "react/no-is-mounted": 2,
            "react/no-multi-comp": [2, { "ignoreStateless": true }],
            "react/no-render-return-value": 2,
            "react/no-set-state": "off",
            "react/no-string-refs": 2,
            "react/no-unescaped-entities": 2,
            "react/no-unknown-property": 2,
            "react/no-unused-prop-types": 1,
            "react/no-will-update-set-state": 2,
            "react/prefer-es6-class": 2,
            "react/prefer-stateless-function": 2,
            "react/prop-types": "off",
            "react/react-in-jsx-scope": "off",
            "react/require-default-props": 2,
            "react/require-optimization": "off",
            "react/require-render-return": 2,
            "react/self-closing-comp": [2, { "html": false }],
            "react/sort-prop-types": "off",
            "react/style-prop-object": 2,
            "react/void-dom-elements-no-children": 2,
            "react/sort-comp": [
                0,
                {
                    "order": [
                        "static-properties",
                        "static-methods",
                        "state",
                        "properties",
                        "lifecycle",
                        "everything-else",
                        "render"
                    ],
                    "groups": {
                        "static-properties": [
                            "displayName",
                            "propTypes",
                            "contextTypes",
                            "childContextTypes",
                            "mixins",
                            "statics"
                        ],
                        "lifecycle": [
                            "getDefaultProps",
                            "getInitialState",
                            "constructor",
                            "getChildContext",
                            "componentWillMount",
                            "componentDidMount",
                            "componentWillReceiveProps",
                            "shouldComponentUpdate",
                            "componentWillUpdate",
                            "componentDidUpdate",
                            "componentDidCatch",
                            "componentWillUnmount"
                        ]
                    }
                }
            ]
        }
    },
    "htmlcs": {
        "max-len": 120
    }
}
